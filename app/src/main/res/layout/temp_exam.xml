<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="125dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondPage" />
        <TextView
            android:id="@+id/exam_name"
android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Exam Name Exam description Exam description Exam description Exam description "
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/secondPage"
            android:textStyle="bold" />


        <TextView
            android:text="Exam description Exam description Exam description Exam description Exam description Exam description Exam description Exam description "
            android:textSize="17dp"

            android:id="@+id/exam_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondPage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondPage" />

    </LinearLayout>

</LinearLayout>